<div class="wrapper">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f| %>
    <h2>Forgot your password?</h2>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
    </div>

    <br />
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'btn btn-sm btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
