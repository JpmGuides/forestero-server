<h1 class="title">Users</h1>
<% if current_user.admin? %>
  <%= link_to new_user_path, class: 'btn btn-success add-button' do %>
    <i class="fa fa-plus" aria-hidden="true"></i>
    Add user
  <% end %>
<% end %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Email</th>
        <th>Type</th>
        <th class="actions"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr class="<%= user == current_user ? 'info' : '' %>">
          <td><%= user.email %></td>
          <td class="type"><p class="btn btn-sm btn-<%= user.admin ? 'success' : 'info' %> active"><%= user.admin ? 'Admin' : 'User' %></p></td>
          <td class="actions">
            <%= link_to edit_user_path(user), class: 'btn btn-sm btn-primary' do %>
              <i class="fa fa-pencil" aria-hidden="true"></i>
              Edit
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
