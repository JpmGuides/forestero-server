<div class="wrapper">
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, class: 'form-signin' } do |f| %>
    <h2 class="form-signin-heading"><%= t 'devise.invitations.edit.header' %></h2>

    <%= devise_error_messages! %>
    <%= f.hidden_field :invitation_token %>

    <% if f.object.class.require_password_on_accepting %>
    <div class="field">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'sr-only' %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation' %>
      <% end %>
    </div>

    <div class="actions">
      <p><%= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-sm btn-primary btn-block' %></p>
    </div>
  <% end %>
</div>
